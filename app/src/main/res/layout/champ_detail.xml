<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="lolstats.eldin.com.lolstats.champDetailPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/champicon"
                android:src="@drawable/aatrox"
                android:layout_alignParentLeft="true"
                android:layout_width="100sp"
                android:layout_height="100sp"
                />

            <TextView
                android:id="@+id/champname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/champicon"
                android:layout_marginLeft="20sp" />

            <TextView
                android:id="@+id/champtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/champname"
                android:layout_toRightOf="@+id/champicon"
                android:layout_marginLeft="20sp"
                android:text="title"
                android:textSize="20dp"
                android:textStyle="italic"/>

        </RelativeLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/skillsborder"
        android:visibility="visible"
        android:background="@color/ColorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passivename"
                android:textStyle="bold"
                android:text="passive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/passive"
                android:text="passivedescription"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qname"
                android:text="Q spell"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/qdescription"
                android:text="q description"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wname"
                android:text="W spell"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/wdescription"
                android:text="w description"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="7dp"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/ename"
                 android:text="E spell"
                 android:textStyle="bold"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

             <TextView
                 android:id="@+id/edescription"
                 android:text="E description"
                 android:textSize="10sp"
                 android:textStyle="italic"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />


         </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                android:id="@+id/rname"
                android:text="R spell"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

              <TextView
                  android:id="@+id/rdescription"
                  android:text="R description"
                  android:textSize="10sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
